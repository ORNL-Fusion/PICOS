dp                          0.2
r1                          0.01
r2                          0.10

// Electron initial conditions:
// =============================================================================
IC_ne                       3.0E19
IC_Te                       25

// RF operator:
// =============================================================================
RF_Prf                      10E3
RF_freq                     15E6
RF_x1                       1.2
RF_x2                       1.5
RF_kpar                     20
RF_kper                     100
RF_handedness               -1
